# API 서버 설정
REACT_APP_API_URL=http://localhost:3000/api
REACT_APP_API_TIMEOUT=30000

# 애플리케이션 설정
REACT_APP_TITLE=산업안전 점검 시스템
REACT_APP_VERSION=1.0.0
REACT_APP_DESCRIPTION=AI 기반 스마트 안전 점검 솔루션

# 파일 업로드 설정
REACT_APP_MAX_FILE_SIZE=10485760
REACT_APP_MAX_FILES=10
REACT_APP_ALLOWED_FILE_TYPES=image/jpeg,image/jpg,image/png,image/webp

# UI 설정
REACT_APP_THEME_PRIMARY_COLOR=#1976d2
REACT_APP_THEME_SECONDARY_COLOR=#f50057
REACT_APP_DEFAULT_LANGUAGE=ko

# 개발 설정
GENERATE_SOURCEMAP=true
ESLINT_NO_DEV_ERRORS=true
FAST_REFRESH=true

# 빌드 설정
BUILD_PATH=build
PUBLIC_URL=.

# PWA 설정
REACT_APP_PWA_ENABLED=false

# 분석 및 모니터링
REACT_APP_ANALYTICS_ID=
REACT_APP_SENTRY_DSN=

# 기능 플래그
REACT_APP_ENABLE_DEVTOOLS=true
REACT_APP_ENABLE_MOCK_API=false
REACT_APP_ENABLE_OFFLINE_MODE=false

# 지도 API (필요시)
REACT_APP_GOOGLE_MAPS_API_KEY=
REACT_APP_KAKAO_MAP_API_KEY=

# 소셜 로그인 (필요시)
REACT_APP_GOOGLE_CLIENT_ID=
REACT_APP_FACEBOOK_APP_ID=